{
  "manifest_version": 2,
  "name": "Dota Tooltips",
  "version": "0.0.1.2",
  "description": "Popup text for Dota 2 related keywords.",
  "author": "github.com/dgkf",
  "icons": {
    "128": "icons/dotatooltips_icon_128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "https://*.dota2.com/*",
    "http://*.dota2.com/*"
  ],

  "browser_action": {
    "default_popup": "html/options.html"
  },

  "options_ui": {
    "chrome_style": true,
    "page": "html/options.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["ext/js/jquery-3.1.0.min.js", "js/add_tooltips.js", "js/update_tab_settings.js"],
      "css": ["css/style_custom.css"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    "html/*.html",
    "json/*.json"
  ]
 }
