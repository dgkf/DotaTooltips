{
  "manifest_version": 2,
  "name": "Dota Tooltips",
  "version": "0.1",
  "description": "Popup text for Dota 2 related keywords.",
  "author": "github.com/dgkf",
  "icons": {
    "128": "icons/dotatooltips_icon_128.png"
  },

  "permissions": [
    "storage",
    "https://*.dota2.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["ext/js/jquery-3.1.0.min.js", "js/add_tooltips.js"],
      "css": ["css/dota_tooltips_style_custom.css"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    "html/*.html",
    "json/*.json"
  ]
 }
